{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "lib": ["ES2022"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "useUnknownInCatchVariables": true
  }
}
